class Solution {
public:
    int search(vector<int>& nums, int target) {
        int l=0, r = nums.size()-1, mid;
        while(l<=r){
            mid = (l+r)/2;
            if(nums[mid]==target)
                return mid;

            //check, to which portion of array mid belongs
            //left sorted portion
            if(nums[l]<=nums[mid]){

                if(target>nums[mid] || target<nums[l])
                    l = mid + 1;
                else
                    r = mid - 1;
            }

            //right sorted portion
            else{

                if(target<nums[mid] || target>nums[r])
                    r = mid - 1;
                else
                    l = mid + 1;
            }
        }

        return -1;
    }
};
